@model MaiVietAnhBTH2.Models.Student
<h1>Tạo mới 1 sinh viên </h1>
<hr>
<div class="row">
    <div class="col-md-4">
        <from asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="from-group">
                <label asp-for="StudentID" class="control-label"></label>
                <input asp-for="StudentID" class="from-control">
                <span asp-validation-for="StudentID" class="text-danger"></span>
                </div>
                <div class="from-group">
                    <label asp-for="StudentName" class="control-label"></label>
                    <input asp-for"StudentName" class="from-control">
                    <span asp-validation-for="StudentName" class="text-danger"></span>
                </div>
                <br>
                <div class="from-group">
                    <input class="btn btn-primary" type="submit" value="Save">  
                    <a class="btn btn-success" asp-action="Index">Danh sách sinh viên</a>
                </div>
                </from>
                </div>
                </div>
                
